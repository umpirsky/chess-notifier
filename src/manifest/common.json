{
    "name": "Chess Notifier",
    "description": "Get Chess.com notifications on your desktop.",
    "version": "0.1.0",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": ["*://api.chess.com/*", "tabs", "storage", "notifications"],
    "icons": {
        "64": "icons/128/pawn_color.png"
    },
    "options_ui": {
        "page": "options.html"
    }
}
