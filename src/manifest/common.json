{
    "name": "Chess Notifier",
    "description": "Get Chess.com notifications on your desktop.",
    "version": "0.1.0",
    "manifest_version": 2,
    "developer": {
        "name": "Saša Stamenković",
        "url": "http://umpirsky.com"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": ["*://api.chess.com/*", "tabs", "storage", "notifications"],
    "options_ui": {
        "page": "options.html"
    }
}
