{
    "name": "Chess Notifier",
    "description": "Get Chess.com notifications on Firefox.",
    "version": "0.1.0",
    "manifest_version": 2,
    "developer": {
        "name": "Saša Stamenković",
        "url": "http://umpirsky.com"
    },
    "applications": {
        "gecko": {
            "id": "chess-notifier@umpirsky.com"
        }
    },
    "icons": {
        "64": "icons/64/pawn_grey.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "icons/64/pawn_grey.png"
    },
    "permissions": ["*://api.chess.com/*", "tabs", "storage", "notifications"],
    "options_ui": {
        "page": "options.html"
    }
}
